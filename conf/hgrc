[ui]
username = Victor Stinner <vstinner@python.org>
verbose = True

[diff]
# The "review" feature of the Python bug tracker doesn't support git patches
# because such patch doesn't contain the revision
# git = on
showfunc = on

[extensions]
evolve=
topic=
color=
# enable hg glog
graphlog=
pager=
progress=
